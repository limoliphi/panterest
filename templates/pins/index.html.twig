{% extends 'layouts/base.html.twig' %}

{% block title 'Find all the best pins on earth !' %}

{% block body %}
    {% if pins|length > 0 %}
        <h1 class="mb-4 text-center text-muted">{{ pluralize(pins|length, 'Pin') }}</h1>

        <div class="row mb-5">
            {% for pin in pins %}
                <div class="col-md-4">
                    <article class="pin bg-white rounded shadow">
                        <div class="mw-100 rounded-top overflow-hidden">
                            <a href="{{ path('app_pins_show', {id: pin.id}) }}">
                                <img src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('build/images/placeholder_panterest.jpg')) |
                                imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.title }}"
                                     class="w-100"/>
                            </a>
                        </div>
                        <h2 class="pl-3 pt-3 h5"><a href="{{ path('app_pins_show', {id: pin.id}) }}" class="text-secondary text-decoration-none">{{ pin.title }}</a></h2>
                        <p class="pl-3 pb-3 text-muted"><small>Submitted [OWNER FULL NAME]</small></p>
                    </article>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="h1 mt-5 text-center">No pins yet. <a href="{{ path('app_pins_create') }}">Be the first !</a></p>
    {% endif %}
{% endblock %}
